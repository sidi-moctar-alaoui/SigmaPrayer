<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:centerColor="@color/mainBackground"
				android:endColor="@color/mainBackground"
				android:startColor="@color/mainBackground">
			</gradient>
			<stroke
				android:width="1dp"
				android:color="@color/mainBackgroundBorder">
			</stroke>
			<corners android:radius="0dp">
			</corners>
			<padding
				android:bottom="2dp"
				android:left="2dp"
				android:right="2dp"
				android:top="2dp"
				android:color="@color/mainBackground">
			</padding>
		</shape>
	</item>

</selector>