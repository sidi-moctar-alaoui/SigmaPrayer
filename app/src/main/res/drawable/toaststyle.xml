<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="@color/dialogBackground"
		      android:endColor="@color/dialogBackground"
		      android:centerColor="@color/dialogBackgroundGrad" >
			</gradient>
			<stroke
				android:width="1dp"
				android:color="@color/dialogBackgroundBorder">
			</stroke>
			<corners android:radius="3dp">
			</corners>
			<padding
			   android:left="4dp"
			   android:top="4dp"
			   android:right="4dp"
			   android:bottom="4dp">
			</padding>
		</shape>
	</item>

</selector>
