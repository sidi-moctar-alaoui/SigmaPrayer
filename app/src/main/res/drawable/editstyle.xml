<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/resBackground"
                android:endColor="@color/resBackground"
                android:angle="180">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/resBackgroundBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
           </padding>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
           <gradient
                android:startColor="@color/resBackground"
                android:endColor="@color/resBackground"
                android:angle="180">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/resBackgroundBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
           </padding>
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/resBackground"
                android:endColor="@color/resBackground"
                android:angle="180">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/resBackgroundBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
           </padding>
        </shape>
    </item>
</selector>
