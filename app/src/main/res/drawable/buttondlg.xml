<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
	
    <item android:state_pressed="true">
        <shape>
           <gradient
                android:startColor="@color/itemSelected"
                android:endColor="@color/itemSelectedL"
                android:centerColor="@color/itemSelectedL"
                android:angle="270">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/itemSelectedBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp">
           </padding>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
           <gradient
                android:startColor="@color/itemSelected"
                android:endColor="@color/itemSelectedL"
                android:centerColor="@color/itemSelectedL"
                android:angle="270">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="@color/itemSelectedBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp">
           </padding>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/buttondlgGrad"
                android:endColor="@color/buttondlg"
                android:centerColor="@color/buttondlg"
                android:angle="270">
            </gradient>
             <stroke
                android:width="1dp"
                android:color="@color/buttondlgBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp">
           </padding>
        </shape>
    </item>
    
</selector>
