<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/itemSelected"
                android:endColor="@color/itemSelected"
                android:centerColor="@color/itemSelected"
                android:angle="270">
            </gradient>
             <stroke
                android:width="1dp"
                android:color="@color/itemSelectedBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp">
           </padding>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
           <gradient
                android:startColor="@color/itemSelected"
                android:endColor="@color/itemSelected"
                android:centerColor="@color/itemSelected"
                android:angle="270">
            </gradient>
             <stroke
                android:width="1dp"
                android:color="@color/itemSelectedBorder">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp">
           </padding>
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/transparent"
                android:endColor="@color/transparent"
                android:centerColor="@color/transparent"
                android:angle="270">
            </gradient>
             <stroke
                android:width="0dp">
            </stroke>
            <corners
                android:radius="0dp">
            </corners>
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp">
           </padding>
        </shape>
    </item>
</selector>
