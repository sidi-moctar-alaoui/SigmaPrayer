<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollSelectf"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layoutSelectFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/lblSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/strSelectFile" >
        </TextView>

        <EditText
            android:id="@+id/edtSelectFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:cursorVisible="true"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:inputType="textFilter|textNoSuggestions"
            android:maxLength="100"
            android:singleLine="true" >
        </EditText>

        <LinearLayout
            android:id="@+id/layoutSelectFileNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtSelectFileNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:focusable="false"
                android:text="" >
            </TextView>
        </LinearLayout>

        <include
            android:id="@+id/idSeparator"
            layout="@layout/seplayout" >
        </include>

        <LinearLayout
            android:id="@+id/layoutSelectFileB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:state_enabled="true"
                android:text="@string/strCancel" >
            </Button>

            <Button
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:state_enabled="true"
                android:text="@string/strOK" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>