<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSettingsAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/topstyle"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <include
        android:id="@+id/idTitle"
        layout="@layout/titlelayout" >
    </include>

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/headerstyle"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeader_AR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="" >
        </TextView>

        <Button
            android:id="@+id/btnCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center" >
        </Button>

        <LinearLayout
            android:id="@+id/layoutCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="" >
            </TextView>

            <TextView
                android:id="@+id/txtCalendar_AR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layoutSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainstyle"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <LinearLayout
                android:id="@+id/layoutParams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/layoutCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtCountryLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strCountry" >
                    </TextView>

                    <EditText
                        android:id="@+id/edtCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="textFilter|textNoSuggestions"
                        android:maxLength="60"
                        android:singleLine="true" >
                    </EditText>

                    <TextView
                        android:id="@+id/txtCountryLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtCityLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strCity" >
                    </TextView>

                    <EditText
                        android:id="@+id/edtCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="textFilter|textNoSuggestions"
                        android:maxLength="60"
                        android:singleLine="true" >
                    </EditText>

                    <TextView
                        android:id="@+id/txtCityLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtLatitudeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strLatitude" >
                    </TextView>

                    <EditText
                        android:id="@+id/edtLatitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="textFilter|textNoSuggestions"
                        android:maxLength="10"
                        android:singleLine="true" >
                    </EditText>

                    <TextView
                        android:id="@+id/txtLatitudeLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtLongitudeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strLongitude" >
                    </TextView>

                    <EditText
                        android:id="@+id/edtLongitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="textFilter|textNoSuggestions"
                        android:maxLength="10"
                        android:singleLine="true" >
                    </EditText>

                    <TextView
                        android:id="@+id/txtLongitudeLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTimezone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtTimezoneLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strTimezone" >
                    </TextView>

                    <EditText
                        android:id="@+id/edtTimezone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="textFilter|textNoSuggestions"
                        android:maxLength="5"
                        android:singleLine="true" >
                    </EditText>

                    <TextView
                        android:id="@+id/txtTimezoneLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTimezoneAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtTimezoneAutoLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strTimezoneAuto" >
                    </TextView>

                    <LinearLayout
                        android:id="@+id/layoutTimezoneAutoOpt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:layout_weight=".40"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optTimezoneAuto"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:layout_gravity="center"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtTimezoneAutoLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="@string/strTimezoneAuto_AR" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTimeformat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtTimeformatLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="left"
                        android:text="@string/strTimeformat" >
                    </TextView>

                    <LinearLayout
                        android:id="@+id/layoutTimeformatOpt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".40"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optTimeformat"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtTimeformatLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="@string/strTimeformat_AR" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPrayTimesMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/resultstyle"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/layoutPrayTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/resultstyle"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtTime1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtTime3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtTime4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtTime6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@drawable/resultstyle"
                        android:gravity="center"
                        android:text="" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtTime7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPrayTimesAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/resultstyle"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/layoutAlarmTime1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".20"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optAlarmTime1"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAlarmTime3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".20"
                        android:background="@drawable/resultstyle"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optAlarmTime3"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAlarmTime4"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".20"
                        android:background="@drawable/resultstyle"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optAlarmTime4"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAlarmTime6"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".20"
                        android:background="@drawable/resultstyle"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optAlarmTime6"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:layout_margin="0dp"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAlarmTime7"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight=".20"
                        android:background="@drawable/resultstyle"
                        android:gravity="center" >

                        <CheckBox
                            android:id="@+id/optAlarmTime7"
                            android:layout_width="@dimen/boxsize"
                            android:layout_height="@dimen/boxsize"
                            android:button="@drawable/checkbox"
                            android:fadingEdge="horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/boxpadding"
                            android:text="" >
                        </CheckBox>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAlarmFileLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/resultstyle"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtAlarmFileLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.40"
                        android:gravity="left"
                        android:text="@string/strAlarmFile" >
                    </TextView>

                    <Button
                        android:id="@+id/btnAlarm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:gravity="center"
                        android:text="@string/strBrowse" >
                    </Button>

                    <TextView
                        android:id="@+id/txtAlarmFileLabel_AR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.40"
                        android:gravity="right"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAlarmFilename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/resultstyle"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/txtAlarmFilename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnUpdateCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.50"
                    android:gravity="center"
                    android:text="@string/strUpdateCity" >
                </Button>

                <Button
                    android:id="@+id/btnRemoveCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.50"
                    android:gravity="center"
                    android:text="@string/strRemoveCity" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCalcMethodLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtCalcMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="@string/strCalcMethod" >
                </TextView>

                <TextView
                    android:id="@+id/txtCalcMethod_AR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="" >
                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/btnCalcMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>